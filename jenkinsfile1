@Library('my-shared-library') _

pipeline {

    agent any
    parameters{
        choice(name: 'action', choice: 'create/ndelete' description: 'choice create/destroy' )
    }

    stages {
        when { expression { param.action == 'create'}
        }
        }
        stage('git checkout') {

            steps {

                    gitCheckout(
                        branch: 'main',
                        url: 'https://github.com/bdino2005/devops_java_app.git'
                    )
                
            }
        }
         stage('unit test maven') {
         when { expression { param.action == 'create'}
            steps {

                script {
                    mvnTest()
                }
            }
        }
        stage('integration test maven') {
        when { expression { param.action == 'create'}
            steps {

                script {
                   mvnIntergrationTest  ()
                }
            }
        }
    }
}






